<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0068C8"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="홍길동 님"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_marginRight="25dp"
            android:layout_marginTop="50px"
            android:textColor="#ffffff"
            android:textSize="26sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="520dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_rectangle"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_id"
                android:text="홍길동 님"
                android:textStyle="bold"
                android:gravity="left"
                android:paddingLeft="60dp"
                android:layout_marginTop="50px"
                android:textColor="#ffffff"
                android:textSize="28sp"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:id="@+id/logout"
                android:text="로그아웃"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginTop="50px"
                android:layout_marginLeft="40dp"
                android:textColor="#ffffff"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_rounded"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/safety_name"
                android:text="금고명 : NFK-1039-EL"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="50px"
                android:textColor="#c9c9c9"
                android:textSize="26sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/my_safety"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="나의 금고 현황"
                android:textStyle="bold"
                android:typeface="sans"
                android:textColor="#ffffff"
                android:layout_marginTop="50px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_rounded"
                android:textSize="25dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/modify_safety"
                android:text="금고 정보 수정하기"
                android:textStyle="bold"
                android:typeface="sans"
                android:textColor="#ffffff"
                android:layout_marginTop="50px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_rounded"
                android:textSize="25dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/modify_info"
                android:text="개인정보 수정"
                android:textStyle="bold"
                android:typeface="sans"
                android:textColor="#ffffff"
                android:layout_marginTop="50px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_rounded"
                android:textSize="25dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settings"
                android:text="환경설정"
                android:textStyle="bold"
                android:typeface="sans"
                android:textColor="#ffffff"
                android:layout_marginTop="50px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_rounded"
                android:textSize="25dp"
                />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>