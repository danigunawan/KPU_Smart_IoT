<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0068C8"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="홍길동 님"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_marginRight="25dp"
            android:layout_marginTop="50px"
            android:textColor="#ffffff"
            android:textSize="26sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="520dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_rectangle"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_id"
                android:text="홍길동님 금고현황"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="50px"
                android:textColor="#ffffff"
                android:textSize="28sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/safety"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="SA-1004"
                    android:textSize="25sp"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="10dp"
                    android:text="등록일 : 2019.08.04"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개폐 상태 : "
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:layout_marginLeft="25dp"
                />
            <TextView
                android:id="@+id/safety_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="열림"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="움직임 감지 : "
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:layout_marginLeft="25dp"
                />
            <TextView
                android:id="@+id/safety_move"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이상없음"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="진동 감지 : "
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:layout_marginLeft="25dp"
                />
            <TextView
                android:id="@+id/safety_vibrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이상없음"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/safety_open"
                android:text="열기"
                android:textStyle="bold"
                android:typeface="sans"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginTop="50px"
                android:layout_marginLeft="45px"
                android:layout_marginRight="40px"
                android:padding="10dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_rounded"
                android:textSize="25dp"
                />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>